% mycv.sty - Custom CV Style

% --- Package imports ---
\usepackage[utf8]{inputenc} % Encoding UTF-8
\usepackage[T1]{fontenc}    % Font encoding
\usepackage{lmodern}        % Latin Modern font
\usepackage[a4paper,margin=2cm]{geometry} % Page layout
\usepackage{enumitem}       % Custom list spacing
\usepackage{xcolor}         % Colors
\usepackage{titlesec}       % Section title formatting
\usepackage{setspace}       % Line spacing
\usepackage{hyperref}       % Clickable links
\usepackage{graphicx}       % Images

% --- Basic colors ---
\definecolor{myblue}{RGB}{0,102,204}

% --- Section title style ---
\titleformat{\section}
  {\normalfont\Large\bfseries\color{myblue}}
  {}{0pt}{}

% --- Item list style ---
\setlist[itemize]{topsep=2pt,itemsep=2pt,leftmargin=15pt}

% --- Link colors ---
\hypersetup{
    colorlinks=true,
    linkcolor=myblue,
    urlcolor=myblue
}

% --- Paragraph spacing ---
\setlength{\parskip}{4pt}
\setlength{\parindent}{0pt}

% --- Line spacing ---
\onehalfspacing
